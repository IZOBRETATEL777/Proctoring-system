<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>List of questions</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form action="/question_list" method="POST">
                    <h1>List of questions</h1>
                    <div class="form-group">
                        <label for="test_name">Test name</label>
                        <input type="text" class="form-control" id="test_name" name="test_name"
                            placeholder="Enter test name">
                    </div>
                    <h3>Select questions</h3>
                    <% for (let i=0; i < questions.length; i++) { %>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox<%= i %>" name="questions"
                                value="<%= questions[i].id %>">
                            <label class="form-check-label" for="inlineCheckbox<%= i %>">
                                <%= questions[i].text %> Answer: <%= questions[i].answer %>
                            </label>
                            <br><br>
                        </div>
                        <% } %>
                            <div class="form-group">
                                <label for="group">Group</label>
                                <select class="form-control" id="group" name="group">
                                    <% for (let i=0; i < groups.length; i++) { %>
                                        <option value="<%= groups[i].id %>">
                                            <%= groups[i].name %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="start_time">Start time</label>
                                <input type="datetime-local" class="form-control" id="start_time" name="start_time">
                            </div>

                            <div class="form-group">
                                <label for="end_time">End time</label>
                                <input type="datetime-local" class="form-control" id="end_time" name="end_time">
                            </div>

                            <button type="submit" class="btn btn-primary">Create test</button>
                            </from>
                            <a href="/add_question" class="btn btn-primary">Add question</a>

            </div>
        </div>
    </div>

</body>

</html>